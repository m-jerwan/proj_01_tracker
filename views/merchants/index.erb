<h1>Merchants</h1>

<h2>Available merchants:</h2>
<%counter = 1%>
<table>
  <tr>
    <th>No</th>
    <th>Merchant</th>
    <th>Actions</th>
  </tr>
<% for merchant in @merchants %>
      <tr>
        <td><%=counter%></td>
        <td><%= merchant.merchant_name %></td>
        <td><form class= "button" action= "/merchants/<%=merchant.id%>/edit" method= "post">
          <input type="submit" value= "Edit">
        </form></td>
        <td>
          <form class= "button" action= "/merchants/<%=merchant.id%>/delete" method= "post">
            <input type="submit" value= "Delete">
          </form>
        </td>
      </tr>
      <%counter += 1%>
  <%end%>
</table>

<a href="/merchants/new">Create merchant</a>
