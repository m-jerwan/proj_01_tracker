<h1>Transactions</h1>
<ul>
<li> <a href="/transactions/month/<%=@month_back.strftime('%-m')%>"> Monthly views </a> </li>
<li> <a href="/transactions/year/<%=@month_back.strftime('%Y')%>"> Yearly views </a> </li>
</ul>

<h2><%=@now.strftime("%B")%></h2>


<table>
  <tr>
    <th>Time</th>
    <th></th>
    <th>Date</th>
    <th></th>
    <th>Amount</th>
    <th></th>
    <th>Merchant</th>
    <th></th>
    <th>Tag</th>
    <th></th>
    <th>Actions</th>
  </tr>
  <% for transaction in @transactions %>

    <% if transaction.time_stamp.strftime("%-m") == @now.strftime("%-m") %>
      <tr>
        <td><%= transaction.time_stamp.strftime("%H:%M") %></td>
        <td>|</td>
        <td><%= transaction.time_stamp.strftime("%d.%m.%Y") %></td>
        <td>|</td>
        <td>Â£ <%= transaction.amount %></td>
        <td>|</td>
        <td><a href="/merchants"> <%= transaction.find_merchant.merchant_name %></a></td>
        <td>|</td>
        <td><a href="/tags"><%= transaction.find_tag.tag_name.capitalize %></a></td>
        <td>|</td>
        <td>
          <form class= "button" action= "/transactions/<%=transaction.id%>/edit" method= "post">
            <input type="submit" value= "Edit">
          </form>
          <form class= "button" action= "/transactions/<%=transaction.id%>/delete" method= "post">
            <input type="submit" value= "Delete">
          </form>
        </td>
      </tr>
    <%end%>
  <%end%>
</table>

