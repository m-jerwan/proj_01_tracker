

<h1>Transactions</h1>


<table>
  <tr>
    <th>Date</th>
    <th></th>
    <th>Amount</th>
    <th></th>
    <th>Merchant</th>
    <th></th>
    <th>Tag</th>
  </tr>
  <% for transaction in @transactions %>
  <tr>
    <td><%= "Date" %></td>
    <td>|</td>
    <td><%= transaction.amount %></td>
    <td>|</td>
    <td><a href="/merchants"> <%= transaction.find_merchant.merchant_name %></a></td>
    <td>|</td>
    <td><a href="/tags"><%= transaction.find_tag.tag_name.capitalize %></a></td>
  </tr>
  <% end %>
</table>
